{% extends 'base.html.twig' %}

{% block title %}Nos plats{% endblock %}

{% block content %}

    <nav aria-label="breadcrumb ">
        <ol class="breadcrumb py-3 bg-white">
            <li class="breadcrumb-item"><a href="{{ path('home') }}"  style="text-decoration: none;">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('plats') }}" style="text-decoration: none;">Plats</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ plat.name }}</li>
        </ol>
    </nav>


    <section class="slugging">
        <div class="container">
            <div class="row">
                <div class="col">
                    <img src="/platImage/{{ plat.image }}" alt="" class="img-fluid">
                </div>

                <div class="col">
                    <div class="card shadow-sm p-4">
                        <p class="card-text">{{ plat.name}}</p>
                        <div class="card-body">
                            <p class="card-text">{{ plat.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-success">{{ plat.price /100 }} XOF</small>
                                <div class="btn-group">
                                    <a href="{{ path('add_to_cart', { 'id' : plat.id }) }}" class="btn btn-sm btn-outline-success"> Ajouter au panier</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
