{% extends 'base.html.twig' %}

{% block title %}Nos plats{% endblock %}

{% block content %}

    <br>
    <br>
    <br>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {% for plat in plats %}
            <div class="col">
                <div class="card shadow-sm">
                    <img src="/platImage/{{ plat.image }}" alt="" class="img-fluid">
                    <div class="card-body">
                        <p class="card-text">{{ plat.name }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-success">{{ plat.price /100 }} XOF</small>
                            <div class="btn-group">
                                <a href="{{ path('plat', { 'slug' : plat.slug }) }}" class="btn btn-sm btn-outline-success">DÃ©tail sur le repas </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
